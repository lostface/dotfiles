    cmd = "c:/Users/zfeher/dotfiles/git/diff/kd_mergetool.sh" "$MERGED" "$LOCAL" "$BASE" "$REMOTE"
    trustExitCode = true

[mergetool "diffmerge"]
    cmd = "c:/Users/zfeher/dotfiles/git/diff/dm_mergetool.sh" "$MERGED" "$LOCAL" "$BASE" "$REMOTE"
    trustExitCode = true

[diff]
    tool = p4merge

[difftool "p4merge"]
    cmd = "c:/Users/zfeher/dotfiles/git/diff/p4_difftool.sh" "$LOCAL" "$REMOTE" "$MERGED"

[difftool "kdiff"]
    cmd = "c:/Users/zfeher/dotfiles/git/diff/kd_difftool.sh" "$LOCAL" "$REMOTE" "$MERGED"

[difftool "diffmerge"]
