[merge]
    conflictStyle = diff3
    tool = code
	renameLimit = 5000

[merge "npm-merge-driver"]
	name = automatically merge npm lockfiles
	driver = npx npm-merge-driver merge %A %O %B %P

[mergetool]
    prompt = true
	keepBackup = false
    keepTemporaries = false

[mergetool "code"]
    cmd = "c:/Users/zfeher/dotfiles/git/diff/cd_mergetool.sh" "$MERGED" "$LOCAL" "$BASE" "$REMOTE"
    trustExitCode = false

